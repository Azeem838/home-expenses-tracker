<h1>Your Groups</h1>

<button class="button is-primary is-rounded"><%= link_to 'My Profile', user_path(current_user) %></button>

<div class="columns">
  <div class="column is-2">
    <% @groups.each do |group| %>
      <div class="card">
        <div class="card-image">
          <figure class="image">
            <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
          </figure>
        </div>
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <p class="title"><%= group.name %></p>
            </div>
          </div>
          <div class="content">      
            <time datetime="2016-1-1">Created <%= time_ago_in_words(group.created_at)%> ago</time>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
