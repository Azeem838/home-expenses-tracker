<% @groups.each do |group| %>
  <article class="media">
    <figure class="media-left">
      <p class="image is-128x128">
        <%= image_tag group.main_image, class: "is-rounded" if group.main_image.attached? %>
      </p>
    </figure>
    <div class="media-content">
      <div class="content">
          <p>
          <%= link_to group.name, group_path(group) %> <br>
          <time datetime="2016-1-1">Created <%= time_ago_in_words(group.created_at)%> ago</time>
          </p>
      </div>
    </div>
    <div class="media-right">
    Total: <%= Group.total(group) %>
    </div>
  </article>
<% end %>