<div>
  <h2><%= @group.name %></h2>
  <button class="button is-primary is-rounded"><%= link_to 'Edit Group', edit_group_path(@group) %></button>
  <button class="button is-danger is-rounded"><%= link_to 'Delete Group', group_path(@group), method: :delete,
                                                  data: { confirm: "Deleting this group will not delete the expenses in this group. Delete?" } %></button>
</div>


<button class="button is-primary is-rounded"><%= link_to 'My Profile', user_path(current_user) %></button>
<button class="button is-primary is-rounded"><%= link_to 'All Groups', all_groups_path %></button>
<button class="button is-primary is-rounded"><%= link_to 'Create new expense', new_expense_path %></button>


<%= render 'expenses/expense' %>