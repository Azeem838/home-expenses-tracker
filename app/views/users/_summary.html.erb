<table class="table is-hoverable">
  <thead>
    <tr>
      <th><abbr title="Position"><%= link_to "Group", all_groups_path %></abbr></th>
      <th>Total</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th><abbr title="Position"><%= link_to "All Expenses", all_expenses_path %></abbr></th>
      <th><%= number_to_currency(@grand_total) %></th>
    </tr>
  </tfoot>
  <tbody>  
    <% @groups.each do |g| %>
    <tr>
      <th><%= link_to g.name, group_path(g) %> </th>
      <td><%= number_to_currency(Group.total(g)) %></strong>
    </tr>
    <% end %>
    <tr>
      <th><%= link_to"External Expenses", all_external_expenses_path %></th>
      <td><%= number_to_currency(@total)  %></td>
    </tr>
  </tbody>
</table>
