<%= render 'shared/errors', obj: @group %>
<div class="field">
  <%= form_with(model: @group, local: true) do |f| %>
    <%= f.label :name, class: "label" %> 
    <div class="control">
      <%= f.text_field :name, class: "input", placeholder: "e.g Recurring Expenses" %>

      <div id="file-js-example" class="file has-name is-boxed mt-3">
        <label class="file-label">
        <%= f.file_field :main_image, class: "file-input", type: "file" %>
          <span class="file-cta">
            <span class="file-icon">
              <i class="fas fa-upload"></i>
            </span>
            <span class="file-label">
              Choose a fileâ€¦
            </span>
          </span>
          <span class="file-name">
            No file chosen
          </span>
        </label>
      </div>
      <%= f.submit "Submit", class: "button is-success mt-3" %>
    </div>  
  <% end %>
</div>

<%= link_to "Back", :back %>
