<section class="hero is-fullheight">
    <div class="hero-body py-0 is-block">
        <div class="container has-text-centered">
            <div class="column is-4 is-offset-4">
                <h3 class="title has-text-black">Login</h3>
                <hr class="login-hr">
                <p class="subtitle has-text-black">Please login to proceed.</p>
                <div class="box mt-0">                 
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>                      
                    <div class="field">
                        <div class="control">
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-large", placeholder: "Your Email" %>
                        </div>
                    </div>

                    <div class="field">
                        <div class="control">
                          <%= f.password_field :password, autocomplete: "current-password", class: "input is-large", placeholder: "Your Password", type: "password" %>
                        </div>
                    </div>
                    <% if devise_mapping.rememberable? %>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                      </div>
                    <% end %>

                    <div class="actions">
                      <%= button_tag( class: "button is-block is-info is-large is-fullwidth") do %>
                          Log in <i class='fas fa-sign-in-alt'></i>    
                      <% end %>
                    </div>
                  <% end %>
                </div>
                <p class="has-text-grey">
                  <%= render "devise/shared/links" %>
                </p>
            </div>
        </div>
    </div>
</section>