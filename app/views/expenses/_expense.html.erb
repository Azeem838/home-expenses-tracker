<div class="tile is-ancestor">
  <div class="tile is-vertical is-4">
    <div class="tile">
      <div class="tile is-parent is-vertical">
      <% @expenses.each do |expense| %>
        <article class="tile is-child notification is-primary">
          <p class="title has-text-weight-bold">Name: <%= expense.name %></p>
          <p class="subtitle"><em>Amount: </em><%= expense.amount %></p>
          <button class="button is-primary is-small is-rounded"><%= link_to 'Edit', edit_expense_path(expense) %></button>
          <button class="button is-danger is-small is-rounded"><%= link_to 'Delete', expense_path(expense), method: :delete, data: { confirm: "Are you sure?" } %></button>
        </article>
      <% end %>
      </div>
    </div>
  </div>
</div>
